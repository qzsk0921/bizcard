/* components/DropdownMenu/telephone.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 2;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  width: 100%;
  text-align: center;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #F2F3F6;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  overflow: hidden;
}

.dropdown-item-down__content .l {
  background: #fff;
  font-size: 32rpx;
  color: #333333;
  height: 104rpx;
  line-height: 104rpx;
  border-bottom: 2rpx solid rgba(242, 243, 246, 0.39);
}

.dropdown-item-down__content .l1 {
  font-size: 36rpx;
  color: #4980F9;
  height: 112rpx;
  line-height: 112rpx;
}

.dropdown-item-down__content .l5 {
  color: #999999;
  background: rgba(255, 255, 255, 0.39);
}