/* components/DropdownMenu/diy.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 1;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  background: #FFFFFF;
  box-shadow: 0rpx -4rpx 30rpx rgba(0, 0, 0, 0.18);
  width: 100%;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  overflow: hidden;
  padding: 48rpx 0 40rpx 28rpx;
}

.row1 {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.row2 {
  margin-top: 23rpx;
}

.row2 text:first-child {
  font-size: 38rpx;
  font-weight: bold;
  color: #4980F9;
}

.row2 text:last-child {
  font-size: 28rpx;
  color: #333333;
}

.row3 {
  margin-top: 34rpx;
  width: 694rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #4980F9;
  box-shadow: 0rpx 6rpx 24rpx rgba(0, 57, 181, 0.3);
  opacity: 1;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}