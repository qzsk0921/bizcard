/* components/DropdownMenu/auth.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 2;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  /* background: #BEBEBE; */
  background: rgba(0, 0, 0, .38);
}

.dropdown-item-down__content {
  width: 100%;
  text-align: center;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #F2F3F6;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  padding-bottom: 50rpx;
  /* overflow: hidden; */
}

.dropdown-item-down__content .avatar {
  margin: -102rpx auto 0;
  width: 164rpx;
  height: 164rpx;
  background: rgba(0, 0, 0, 0);
  border: 8rpx solid #FFFFFF;
  border-radius: 50%;
  overflow: hidden;
}

.dropdown-item-down__content .text {
  margin: 44rpx auto 0;
}

.dropdown-item-down__content .text view {
  line-height: 38rpx;
  font-size: 30rpx;
  color: #333333;
}

.dropdown-item-down__content .btn-auth {
  margin-top: 26rpx;
  width: 610rpx;
  line-height: 76rpx;
  background: #4283FB;
  border: 1rpx solid #0F5EEE;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}

.dropdown-item-down__content .no-signin {
  margin-top: 28rpx;
  font-size: 30rpx;
  color: #AAAAAA;
}

.dropdown-item-down__content .tip {
  margin-top: 60rpx;
  font-size: 24rpx;
  color: #888888;
}

.dropdown-item-down__content .tip .agreement {
  font-weight: 500;
  color: #4283FB;
  display: inline-block;
}

.image-box {
  height: 124rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 70rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.image-box image {
  border-radius: 50%;
  width: 54rpx;
  height: 54rpx;

}

.image-box text {
  font-size: 32rpx;
  color: #333333;
  margin-left: 16rpx;
}

