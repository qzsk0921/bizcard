  transform: rotate(45deg);
  border: 5rpx solid #FFFFFF;
  border-left-color: transparent;
  border-bottom-color: transparent;
  margin-left: 10rpx;
}

.box-category {
  padding-left: 24rpx;
  overflow: hidden;
}

.box-category input {
  border-radius: 36rpx;
  text-align: left;
  background: #F6F6F6;
  padding-left: 70rpx;
  width: 498rpx;
  height: 60rpx;
  position: relative;
}

.box-category input::before {
  top: 50%;
  transform: translateY(-50%);
  content: '';
  background-size: 100% 100%;
  position: absolute;
  left: 24rpx;
  width: 27rpx;
  height: 27rpx;
  background-image: url("data:image/png;base64,");
}

.box-category .search-placeholder {
  font-size: 28rpx;
  color: #999999;
}