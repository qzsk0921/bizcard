            <view class="num">库存999</view>
          </view>
        </view>
      </view>
      <view class="sec3 sec">
        <view class="tit">展示信息</view>
        <view class="btn-box">
          <view class="btn btn-attr {{item.require?'require':item.status?'status1':'status0'}}" wx:for="{{styleData.show}}" wx:key="unique">
            <text>{{item.name}}</text>
            <image src="{{tools.parseIcon(item.require, item.status)}}" mode="aspectFill"></image>
          </view>
        </view>
      </view>
      <view class="sec4">
        <!-- <view class="btn btn-save">保存</view> -->
        <view class="pay-box">
          <view class="row1">
            <view class="select-box" bindtap="readHandle">
              <image wx:if="{{readed}}" class="icon-read" src="/assets/images/card_edit_icon_buy_n.png"></image>
              <view wx:else class="icon-noread"></view>
