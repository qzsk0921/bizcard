.form-section .form-item-avatar {
  height: 160rpx !important;
}

.form-section .form-item-avatar .input-box {
  width: calc(100% - 200rpx);
}

.form-section .form-item-avatar .input-box .icon-avatar {
  width: 100rpx;
  height: 100rpx;
}

.form-item-profile {
  padding: 0 !important;
  height: auto !important;
}

.form-section-profile .tit,
.form-section-tag .tit {
  display: flex;
  justify-content: space-between;
  padding-right: 28rpx;
}

.form-section-profile .tit text:last-child,
.form-section-tag .tit text:last-child {
  font-weight: 400;
  font-size: 28rpx;
  color: #CCCCCC;
}

.form-section-profile textarea {
  height: 304rpx;
  width: 100%;
  padding: 30rpx 28rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333333;
}

.form-section .form-item-tag {
  padding: 0 0 26rpx 28rpx !important;
  height: auto !important;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.form-section .form-item-tag .tag {
  margin: 0 20rpx 16rpx 0;
  padding: 17rpx 20rpx;
  border: 2rpx solid #C9CED4;
  opacity: 1;
  border-radius: 4rpx;
}

.form-section .form-item-tag .tag.active {
  border-color: #4980F9;
  color: #4980F9;
}

.form-section-tag .tit,
.form-section-video .tit {
  border-color: transparent !important;
}

.form-section-video .tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 28rpx;
}

.form-section.form-section-video {
  padding: 0 0 30rpx 0;
}

.form-section.form-section-video .btn-edit {
  width: 108rpx;
  height: 44rpx;
  border: 1rpx solid #4980F9;
  border-radius: 22rpx;
  visibility: hidden;
  opacity: 0;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #4980F9;
  text-align: center;
}

.form-section.form-section-video .btn-edit.show {
  visibility: visible;
  opacity: 1;
}

.form-section.form-section-video .form-item-video {
  padding: 0 !important;
  margin: 0 auto;
  width: 694rpx;
  height: 389rpx !important;
  background: rgba(248, 248, 248, 0.39);
  border: 2rpx solid #E2E2E2;
  opacity: 1;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.form-section.form-section-video .form-item-video video {
  width: 100%;
}

.form-section.form-section-video .form-item-video .icon-add {
  width: 138rpx;
  height: 138rpx;
}

.form-section.form-section-video .form-item-video>view {
  margin-top: 2rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #999999;
}

.form-section.form-section-company .form-item-logo {
  height: 160rpx !important;
}

.form-section.form-section-company .form-item-logo .input-box {
  width: calc(100% - 200rpx);
}

.form-section.form-section-company .form-item-logo .icon-logo {
  width: 100rpx;
  height: 100rpx;
}

.form-section.form-section-introduction .tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 28rpx;
}

.form-section-introduction .tit text:last-child {
  font-weight: 400;
  font-size: 28rpx;
  color: #CCCCCC;
}

.form-section.form-section-introduction .form-item-introduction {
  padding-right: 0 !important;
  height: auto !important;
}

.form-item-introduction textarea {
  height: 348rpx;
  width: 100%;
  padding: 30rpx 28rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #333333;
}

.form-section.form-section-companypic .tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 28rpx;
  border-color: transparent !important;
  height: 90rpx !important;
  line-height: 90rpx !important;
}

.form-section-companypic .tit text:last-child {
  font-weight: 400;
  font-size: 28rpx;
  color: #CCCCCC;
}

.form-section.form-section-companypic .form-item-companypic {
  height: auto !important;
  padding: 0 0 80rpx 28rpx !important;
}

.form-item-companypic image {
  width: 162rpx;
  height: 162rpx;
}

.form-item-companypic image:not(:first-child) {
  margin-left: 15rpx;
}

.btn-submit {
  border-radius: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw !important;
  line-height: 90rpx;
  background: #4980F9;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 2;
}

.content .form-section .form-item.arrow {
  position: relative;
}

.content .form-section .form-item.arrow::after {
  content: '';
  width: 14rpx;
  height: 14rpx;
  border: 3rpx solid #b2b2b2;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotateZ(45deg) translateY(-50%);
  position: absolute;
  top: 50%;
  right: 39rpx;
}




.fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 1;
}