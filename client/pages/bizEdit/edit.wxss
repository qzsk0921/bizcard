.content .section2 {
  background: #FFFFFF;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  height: 114rpx;
  align-items: center;
  border-bottom: 2rpx solid #EDF0F5;
}

.content .section2 .l {}

.content .section2 .l image {
  width: 40rpx;
  height: 40rpx;
}

.content .section2 .l text {
  vertical-align: middle;
  margin-left: 14rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}

.content .section2 .r {
  font-size: 28rpx;
  color: #888888;
  height: 100%;
  line-height: 114rpx;
}

.content .section2 .r text {
  margin-right: 19rpx;
}

.content .section2 .r .icon-arrow {
  width: 15rpx;
  height: 24rpx;
}

.content .section3 {
  background: #FFFFFF;
  padding: 0 40rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 138rpx;
}

.content .section3 .l .row1 {
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}

.content .section3 .l .row2 {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #888888;
}

.content .section3 .r {
  width: 36rpx;
  height: 36rpx;
}

.content .section4 {
  margin-bottom: 90rpx;
}

.content .section4 .form-section {
  margin-top: 20rpx;
  background: #FFFFFF;
}

.content .section4 .form-section .tit {
  height: 98rpx;
  line-height: 98rpx;
  padding-left: 28rpx;
  border-bottom: 2rpx solid #EDF0F5;
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}

.placeholder-style {
  color: #CCCCCC;
}

.content .section4 .form-section .form-item {
  display: flex;
  height: 98rpx;
  border-bottom: 1rpx solid #F1F1F1;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  padding-right: 30rpx;
}

.content .section4 .form-section .form-item label {
  width: 200rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
}

.content .section4 .form-section .form-item label.label-require::after {
  content: '*';
  font-size: 30rpx;
  color: #FF3D3D;
}

.content .section4 .form-section .form-item .placeholder {
  font-size: 30rpx;
  color: #AAAAAA;
}

.content .section4 .form-section .form-item input {
  height: 100%;
  width: calc(100% - 200rpx);
}

.content .section4 .form-section .form-item .input-placeholder {
  line-height: 106rpx;
}

.content .section4 .form-section .form-item.form-item-address {
  position: relative;
}

.content .section4 .form-section .form-item.form-item-address::after {
  content: '';
  width: 15rpx;
  height: 15rpx;
  border: 3rpx solid #999999;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotateZ(45deg) translateY(-50%);
  position: absolute;
  top: 50%;
  right: 14rpx;
}

