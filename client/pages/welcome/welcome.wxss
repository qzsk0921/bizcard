/* pages/welcome/welcome.wxss */
.container-welcome {}

.section1 {}

.section1 image {
  width: 100vw;
  height: 987rpx;
}

.section1 .card {
  position: absolute;
  top: 283rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 630rpx;
  height: 704rpx;
  /* background: rgba(255, 255, 255, 0.39); */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 10rpx 16rpx rgba(75, 75, 75, 0.07);
  border-radius: 10rpx;
}

.section1 .card .l1 {
  margin-top: 30rpx;
  text-align: center;
}

.section1 .card .l1 view {
  font-size: 33rpx;
  font-weight: 500;
  color: #555555;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section1 .card .l1 view::after,
.section1 .card .l1 view::before {
  content: '';
  width: 14rpx;
  height: 12rpx;
  background: rgba(73, 128, 249, 0.39);
}

.section1 .card .l1 view::after {
  margin-left: 15rpx;
}

.section1 .card .l1 view::before {
  margin-right: 15rpx;
}

.section1 .card .l2 {
  text-align: center;
  margin-top: 18rpx;
  font-size: 22rpx;
  color: #9F9F9F;
  letter-spacing: 2rpx;
}

.section1 .card .l3 swiper {
  margin: 22rpx auto 0;
  width: 570rpx;
  height: 549rpx;
  background: rgba(242, 242, 242, 0.39);
  opacity: 1;
  border-radius: 8rpx;
}

.section2 {
  margin-top: 44rpx;
}

.section2 .btn-create {
  margin: 0 auto;
  width: 694rpx;
  height: 86rpx;
  /* background: rgba(73, 128, 249, 0.39); */
  background: var(--primary-color);
  box-shadow: 0rpx 6rpx 24rpx rgba(0, 57, 181, 0.3);
  opacity: 1;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 86rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  text-align: center;
}

.section3 {
  margin-top: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 57rpx;
}

.section3 .radio {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.39);
  border: 1rpx solid #707070;
  border-radius: 50%;
}

.section3 .agree {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #CCCCCC;
}

.section3 .agree .agreement {
  font-size: 26rpx;
  color: #A0A0A0;
}