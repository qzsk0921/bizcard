/* pages/wo/product/edit.wxss */
.content {
  color: #333333;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: auto;
}

.form-section {
  background: #ffffff;
}

.tit {
  font-size: 30rpx !important;
  font-weight: bold;
  color: #000000;
}

.input-placeholder {
  font-size: 30rpx;
  color: #AAAAAA;
}

.section1 {
  padding: 0 28rpx;
}

.section1 .r1 {
  height: 98rpx;
  line-height: 98rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #EDF0F5;
}

.section1 .r1 text:last-child {
  font-size: 28rpx;
  color: #CCCCCC;
}

.section1 .r2 {
  height: 107rpx;
  padding: 30rpx 0 40rpx 0;
}

.section2 {
  margin-top: 20rpx;
}

.section2 .r1 {
  height: 98rpx;
  line-height: 98rpx;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #EDF0F5;
}

.section2 .r1 text:last-child {
  font-size: 28rpx;
  color: #CCCCCC;
}

.section2 textarea {
  width: 100%;
  height: 506rpx;
  padding: 30rpx 28rpx 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.section3 {
  margin-top: 20rpx;
}

.section3 .r1 {
  padding-left: 28rpx;
  height: 94rpx;
  line-height: 94rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 28rpx;
}

.section3 .r1 .btn-edit {
  font-size: 28rpx;
  color: #4980F9;
  visibility: hidden;
  opacity: 0;
}

.section3 .r1 .btn-edit.show {
  visibility: visible;
  opacity: 1;
}

.section3 .r2 {
  padding: 0 0 30rpx 0;

}

.section3 .r2 .image-box {
  text-align: center;
  margin: 0 auto;
  width: 694rpx;
  height: 389rpx;
  background: rgba(248, 248, 248);
  border: 2rpx solid #E2E2E2;
  border-radius: 8rpx;
}

.section3 .r2 .image-box .icon-add {
  margin: 103rpx auto 0;
  width: 138rpx;
  height: 138rpx;
}

.section3 .r2 .image-box view {
  font-size: 30rpx;
  font-weight: 500;
  color: #999999;
}

.section4 {
  margin: 20rpx 0 190rpx;
}

.section4 .r1 {
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: rgba(255, 255, 255);
}

.section4 .r1 .l2 {
  display: flex;
  align-items: center;
}

.section4 .r1 .l2 input {
  width: 210rpx;
  height: 30rpx;
  margin-right: 10rpx;
  color: #4980F9;
  text-align: right;
}

.btn-submit {
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
  width: 100vw !important;
  height: 98rpx;
  line-height: 98rpx;
  background: rgba(73, 128, 249);
  font-size: 32rpx;
  color: #FFFFFF;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}

.btn-box {
  position: fixed;
  width: 100vw !important;
  z-index: 1;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
}

.btn-box .btn-a-del,
.btn-box .btn-a-submit {
  width: 373rpx;
  height: 98rpx;
  line-height: 98rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
  color: #FFFFFF;
}

.btn-box .btn-a-del {
  background: #FF5757;
}

.btn-box .btn-a-submit {
  background: #4980F9;
}

.btn-box {}